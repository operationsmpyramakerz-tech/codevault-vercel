{
  "version": 2,
  "functions": {
    "api/index/[[...slug]].js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index/$1" },

    { "src": "^/$", "dest": "/public/login.html" },

    { "src": "^/(login|logout|dashboard|requested-orders|assigned-orders|create-order-details|create-order-products|create-order-review|funds|stocktaking|account)$", "dest": "/public/$1.html" },

    { "src": "^/(?:css|js|images)/(.*)$", "dest": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ]
}