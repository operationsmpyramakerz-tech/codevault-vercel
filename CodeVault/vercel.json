{
  "version": 2,
  "framework": null,

  "routes": [
    { "src": "^/$",                  "dest": "/public/login.html" },
    { "src": "^/login$",             "dest": "/public/login.html" },
    { "src": "^/dashboard$",         "dest": "/public/index.html" },

    { "src": "^/orders/requested$",  "dest": "/public/requested-orders.html" },
    { "src": "^/orders/assigned$",   "dest": "/public/assigned-orders.html" },
    { "src": "^/orders/new$",        "dest": "/public/create-order-details.html" },
    { "src": "^/orders/new/products$","dest": "/public/create-order-products.html" },
    { "src": "^/orders/new/review$", "dest": "/public/create-order-review.html" },

    { "src": "^/stock$",             "dest": "/public/stocktaking.html" },
    { "src": "^/funds$",             "dest": "/public/funds.html" },
    { "src": "^/account$",           "dest": "/public/account.html" },

    
    { "src": "^/(?:.*/)?(css|js|images)/(.*)$", "dest": "/public/$1/$2" }
  ],

  "headers": [
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}