{
  "version": 2,
  "functions": {
    "CodeVault/api/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "CodeVault/api/$1"
    },
    {
      "src": "^(?!/api/).*",
      "dest": "CodeVault/api/index/[[...slug]].js"
    }
  ],
  "installCommand": "npm ci --prefix CodeVault || npm install --prefix CodeVault"
}